<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <options>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Einstellungen</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>


                    <settings.fb_clientid>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Facebook Client ID</label>
                            <config>
                                <type>input</type>
                                <eval>trim</eval>
                                <size>200</size>
                            </config>
                        </TCEforms>
                    </settings.fb_clientid>


                    <settings.fb_clientsecret>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Facebook Client Secret</label>
                            <config>
                                <type>input</type>
                                <eval>trim</eval>
                                <size>200</size>
                            </config>
                        </TCEforms>
                    </settings.fb_clientsecret>

                    <settings.role_id>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Rolle(n) für neue Nutzer</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>fe_groups</allowed>
                                <size>5</size>
                                <maxitems>5</maxitems>
                                <minitems>1</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.role_id>

                    <settings.user_pid>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Speicherort für neue Nutzer</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.user_pid>

                    <settings.login_redirect>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Weiterleitung auf URL nach erfolgreichem Login</label>
                            <config>
                                <type>input</type>
                                <eval>trim</eval>
                                <size>200</size>
                            </config>
                        </TCEforms>
                    </settings.login_redirect>


                </el>
            </ROOT>
        </options>

    </sheets>
</T3DataStructure>
